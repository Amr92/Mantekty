<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.OfferDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_back_offer_detail"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_arrow_back" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:text="Offer details"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="32dp"
            android:background="@drawable/register_bg">

            <ImageView
                android:id="@+id/offer_detail_img"
                android:layout_width="350dp"
                android:layout_height="270dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="28dp" />

            <TextView
                android:id="@+id/offer_detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:textSize="24sp"
                android:textColor="@color/colorPrimary"
                android:textAlignment="center"
                android:layout_below="@id/offer_detail_img" />

            <TextView
                android:id="@+id/offer_detail_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textSize="17sp"
                android:textColor="@android:color/black"
                android:layout_marginStart="16dp"
                android:layout_below="@id/offer_detail_title"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/from_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="From"
                android:textSize="16sp"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_marginStart="16dp"
                android:layout_below="@id/offer_detail_body"/>

            <TextView
                android:id="@+id/date_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textSize="16sp"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_toEndOf="@id/from_word"
                android:layout_alignParentBottom="true"/>

            <TextView
                android:id="@+id/to_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="to"
                android:textSize="16sp"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_marginStart="16dp"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@id/date_from"/>

            <TextView
                android:id="@+id/date_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textSize="16sp"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_toEndOf="@id/to_word"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:id="@+id/store_offer_linear_layout">

            <ImageView
                android:id="@+id/offer_store_img"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginTop="50dp"
                android:layout_marginStart="16dp"/>

            <TextView
                android:id="@+id/offer_store_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="title"
                android:layout_marginTop="60dp"
                android:layout_marginStart="16dp"
                android:textSize="16dp"
                android:textColor="@android:color/holo_blue_dark"
                android:fontFamily="sans-serif" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="num of views"
                android:layout_marginTop="60dp"
                android:layout_marginStart="180dp"
                android:fontFamily="sans-serif-condensed-light"/>

            <TextView
                android:id="@+id/number_views"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:layout_marginTop="60dp"
                android:layout_marginStart="4dp"
                android:fontFamily="sans-serif-condensed-light"
                android:layout_marginBottom="100dp"/>

        </LinearLayout>


    </LinearLayout>


</ScrollView>